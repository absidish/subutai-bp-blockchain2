{
    "name": "${environmentName}",
    "description": "Blockchain mk. II",
    "version": "0.0.1",
    "author": "https://github.com/lbthomsen",
    "ssh-key": "lth",
    "containers": [
        {
            "hostname": "bn0",
            "template": "debian-stretch",
            "peer-criteria": "peers",
            "peer-layout": "bn",
            "size": "LARGE",
            "port-mapping": [
                {
                    "protocol": "udp",
                    "domain": "${bootnodeDomain}",
                    "internal-port": "30301",
                    "external-port": "${bootnodePort}"
                }
            ]
        },
        {
            "hostname": "bc",
            "template": "debian-stretch",
            "peer-criteria": "peers",
            "peer-layout": "bc",
            "size": "LARGE", 
            "port-mapping": [
                {
                    "protocol": "http",
                    "domain": "${blockchainDomainDomain}",
                    "internal-port": "8545",
                    "external-port": "8545"
                }
            ]
        },
        {
            "hostname": "m",
            "template": "debian-stretch",
            "peer-criteria": "peers",
            "peer-layout": "m",
            "size": "SMALL"
        }
    ],
    "peer-criteria": [
        {
            "name": "peers"
        }
    ],
    "peer-layouts": [
        {
            "name": "bn",
            "peer-count": "1",
            "container-per-peer": "1"
        },
        {
            "name": "bc",
            "peer-count": "${numberOfNodes}",
            "container-per-peer": "1"
        },
        {
            "name": "m",
            "peer-count": "${numberOfMiners}",
            "container-per-peer": "1"
        }
    ],
    "ansible-configuration": {
        "source-url": "https://github.com/lbthomsen/subutai-bp-blockchain2/archive/master.zip",
        "ansible-playbook": "site.yml",
        "extra-vars": [
            {
                "key": "bootnode_domain",
                "value": "${bootnodeDomain}"
            },
            {
                "key": "blockchainDomain",
                "value": "${blockchainDomain}"
            },
            {
                "key": "ethereum_network",
                "value": "${ethereumNetwork}"
            }
        ],
        "groups": [
            {
                "name": "bn",
                "hostnames": [
                    "bn0"
                ]
            },
            {
                "name": "bc",
                "hostnames": [
                    "bc"
                ]
            },
            {
                "name": "m",
                "hostnames": [
                    "m"
                ]
            }
        ]
    },
    "user-variables": {
        "bootnodeDomain": {
            "description": "Enter the bootnode domain name",
            "type": "domain",
            "default": "change.the.domain",
            "validation": "[a-zA-Z0-9]+"
        },
        "blockchainDomain": {
            "description": "Enter the blockchain domain name",
            "type": "domain",
            "default": "change.the.domain",
            "validation": "[a-zA-Z0-9]+"
        },
        "bootnodePort": {
            "description": "Enter the bootnode port number",
            "type": "int",
            "default": "30301"
        },
        "environmentName": {
            "description": "Enter the environment name",
            "type": "string",
            "default": "biab2",
            "validation": "[a-zA-Z0-9]+"
        },
        "numberOfNodes": {
            "description": "Enter the number of nodes",
            "type": "int",
            "default": "2"
        },
        "numberOfMiners": {
            "description": "Enter the number of miners",
            "type": "int",
            "default": "2"
        },
        "ethereumNetwork": {
            "description": "Enter the ethereum network id",
            "type": "int",
            "default": "2020"
        }
    }
}